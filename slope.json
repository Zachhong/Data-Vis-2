{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Australian Employment Outcomes Per University",
  "width": 600,
  "height": 600,
  "data": {
    "url": "slope.csv",
    "format": {"type": "csv"}
  },
  "layer": [
    {
      "mark": {
        "type": "line",
        "point": {
          "size": 100,
          "filled": true
        }
      },
      "selection": {
        "click": {
            "type": "multi",
            "fields": ["University"],
            "bind": "legend"
        }
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "axis": {
            "domain": false,
            "ticks": false,
            "labelAngle": 0,
            "labelPadding": 10
          }
        },
        "y": {
          "field": "Employment Rate",
          "type": "quantitative",
          "scale": {"domain": [70, 92]},  
          "axis": {
            "domain": false,
            "ticks": false,
            "title": null
          }
        },
        "detail": {
          "field": "University",
          "type": "nominal"
        },
        "color": {
          "field": "University",
          "type": "nominal",
          "legend": {
            "title": "University",
            "orient": "right"
          },
          "scale": {"scheme": "category20"}
        },
        "opacity":{
            "condition": {
                "param": "click",
                "value": 1
            },
            "value": 0.2
        },
        "tooltip": [  
          {"field": "University", "type": "nominal", "title": "University"},
          {"field": "Employment Rate", "type": "quantitative", "title": "Employment Rate"},
          {"field": "Year", "type": "ordinal", "title": "Year"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": -5
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal"
        },
        "y": {
          "field": "Employment Rate",
          "type": "quantitative"
        },
        "text": {
          "field": "Employment Rate",
          "type": "quantitative",
          "format": ".1f"
        },
        "color": {
          "field": "University",
          "type": "nominal"
        }
      }
    }
  ],
  "config": {
    "axis": {
      "grid": false
    }
  }
}